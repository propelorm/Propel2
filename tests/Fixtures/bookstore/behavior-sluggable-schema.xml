<?xml version="1.0" encoding="ISO-8859-1" standalone="no"?>
<database name="bookstore-behavior" defaultIdMethod="native" package="behavior.sluggable" namespace="Propel\Tests\Bookstore\Behavior">

    <table name="table13">
