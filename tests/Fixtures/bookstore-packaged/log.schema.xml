<?xml version="1.0" encoding="ISO-8859-1" standalone="no"?>
<!DOCTYPE database SYSTEM "../dtd/database.dtd">

<database package="util.log" name="bookstore-log" defaultIdMethod="native" namespace="Propel\Tests\BookstorePackaged">

  <entity name="BookstoreLog" description="Used to test multiple databases support">
    <behavior name="auto_add_pk" />
    <field name="time" required="true" type="TIMESTAMP" description="Log time"/>
    <field name="ident" required="true" type="CHAR" size="24" description="Log priority"/>
    <field name="priority" required="true" type="INTEGER" description="Log priority"/>
    <field name="message" required="true" type="LONGVARCHAR" description="Log message"/>
  </entity>

</database>
